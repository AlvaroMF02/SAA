import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_squared_error

horas_sue침o = np.linspace(0, 8, 50)

pendiente = 12
intercepto = 20
y = pendiente * horas_sue침o + intercepto




# (homocedasticidad)
np.random.seed(42)
desviacion_constante = 5  # Ruido constante
energia_con_ruido_constante = y + np.random.normal(0, desviacion_constante, size=horas_sue침o.shape)

# (heterocedasticidad)
desviacion_ruido = desviacion_constante * horas_sue침o  # Aumento del ruido con x
energia_con_ruido_heterocedasticidad = y + np.random.normal(0, desviacion_ruido)

# Realizar la regresi칩n lineal sobre los datos con dispersi칩n constante (homocedasticidad)
regresion_constante = LinearRegression()
X = horas_sue침o.reshape(-1, 1)
regresion_constante.fit(X, energia_con_ruido_constante)

# Realizar la regresi칩n lineal sobre los datos con dispersi칩n creciente (heterocedasticidad)
regresion_heterocedastica = LinearRegression()
regresion_heterocedastica.fit(X, energia_con_ruido_heterocedasticidad)

# Visualizar los resultados
plt.figure(figsize=(10, 6))

# Datos con dispersi칩n constante (homocedasticidad)
plt.scatter(horas_sue침o, energia_con_ruido_constante, label="Datos con dispersi칩n constante", color="blue", alpha=0.7)
plt.plot(horas_sue침o, regresion_constante.predict(X), label="Regresi칩n lineal (dispersi칩n constante)", color="green", linestyle="-")

# Datos con dispersi칩n creciente (heterocedasticidad)
plt.scatter(horas_sue침o, energia_con_ruido_heterocedasticidad, label="Datos con dispersi칩n creciente", color="orange", alpha=0.7)
plt.plot(horas_sue침o, regresion_heterocedastica.predict(X), label="Regresi칩n lineal (heterocedasticidad)", color="red", linestyle="-")

plt.xlabel("Horas de sue침o (h)")
plt.ylabel("Energ칤a percibida (%)")
plt.title("Regresi칩n lineal sobre datos con dispersi칩n constante y heterocedasticidad")
plt.legend()
plt.grid()
plt.show()

# Mostrar los coeficientes de las regresiones
print("Regresi칩n sobre dispersi칩n constante (homocedasticidad):")
print(f"Pendiente: {regresion_constante.coef_[0]:.2f}")
print(f"Intercepto: {regresion_constante.intercept_:.2f}")
print(f"Error cuadr치tico medio (MSE): {mean_squared_error(energia_con_ruido_constante, regresion_constante.predict(X)):.2f}\n")

print("Regresi칩n sobre dispersi칩n creciente (heterocedasticidad):")
print(f"Pendiente: {regresion_heterocedastica.coef_[0]:.2f}")
print(f"Intercepto: {regresion_heterocedastica.intercept_:.2f}")
print(f"Error cuadr치tico medio (MSE): {mean_squared_error(energia_con_ruido_heterocedasticidad, regresion_heterocedastica.predict(X)):.2f}")



